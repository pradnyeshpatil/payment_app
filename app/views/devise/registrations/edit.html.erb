<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(@user, url: update_user_path(@user), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", readonly: true %>
  </div>

  <div class="field">
    <%= f.label :pan_number %><br />
    <%= f.text_field :pan_number, autofocus: true %>
  </div>

  <% if current_user.admin? %>
    <%= f.label :verified %><br/>
    <%= f.check_box :verified %>
  <% end %>

  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
